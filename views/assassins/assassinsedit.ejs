<!-- views/assassins/assassinsedit.ejs -->
<!-- http://www.killbase.com/assassins/1/edit -->

<!DOCTYPE html>
<html lang="en">

  <head>
    <!-- head tags (meta, css) -->
    <%- include('../partials/headinfo') %>
  </head>

  <body id="assassins">
    <div class="topbanner">
      <div class="crossbase">
        <img src="/../crosshair.png" alt="crosshair" class="cross">
        <h1>Killbase</h1>
      </div>

      <div class="navlinksright">
        <ul class="navlinkstop">
          <li><a href="/">Home</a>|</li>
          <li><a href="/assassins">Assassins</a>|</li>
          <li><a href="/contracts">Contracts</a></li>
        </ul>
      </div>
    </div>

    <h4 class="writeEdit"></h4>

    <!-- Edit an existing assassin -->
    <div class="row form">
      <form action="/assassins" method="PATCH" class="col s12">
        <% assassin.forEach(function(assassin) { %>
          <div class="row L">
            <div class="input-field col s7">
              <input type="text" placeholder="Name" value="<%= assassin.fullName %>">
            </div>
            <div class="input-field col s2">
              <input type="text" placeholder="Age" value="<%= assassin.age %>">
            </div>
          </div>
          <div class="row L">
            <div class="input-field col s7">
              <input type="text" placeholder="Code Name" type="text" value="<%= assassin.codeName %>">
            </div>
            <div class="input-field col s2">
              <input type="text" placeholder="Price" type="text" value="<%= assassin.price %>">
            </div>
          </div>
          <div class="row L">
            <div class="input-field col s7">
              <input type="text" placeholder="Profile Image URL" type="text">
            </div>
            <div class="input-field col s2">
              <input type="text" placeholder="Rating" type="text" value="<%= assassin.rating %>">
            </div>
          </div>
          <div class="row L">
            <div class="input-field col s7">
              <input type="text" placeholder="Weapon of Choice" type="text" value="<%= assassin.weapon %>">
            </div>
            <div class="input-field col s2">
              <input type="text" placeholder="Kills" type="text" value="<%= assassin.kills %>">
            </div>
          </div>
          <div class="row LB">
            <div class="input-field col s7">
              <input type="email" placeholder="Contact Email" type="email" class="validate" value="<%= assassin.contactInfo %>">
            </div>
          </div>

          <!-- add assassin button -->
          <input type="submit" value="Save Changes" class="waves-effect waves-light btn submita">
        <% }); %>
      </form>
    </div>


    <!-- footer -->
    <%- include('../partials/footer') %>

    <!-- typed.js for typewriter effect -->
    <script type="text/javascript">
    	$(function(){
        $(".writeEdit").typed({
          strings: ["+D!m @dY4[de8]- b%3lmjo", "Edit Assassin"],
          typeSpeed: -10,
          backSpeed: -10,
          showCursor: false,
        });
      });
    </script>

  </body>

</html>
