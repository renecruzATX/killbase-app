<!-- views/assassins/assassinsone.ejs -->
<!-- http://www.killbase.com/assassins/1 -->

<!DOCTYPE html>
<html lang="en">

  <head>
    <!-- head tags (meta, css) -->
    <%- include('../partials/headinfo') %>
  </head>

  <body id="assassins">
    <div class="topbanner">
      <div class="crossbase">
        <img src="../crosshair.png" alt="crosshair" class="cross">
        <h1>Killbase</h1>
      </div>

      <div class="navlinksright">
        <ul class="navlinkstop">
          <li><a href="/">Home</a>|</li>
          <li><a href="/assassins">Assassins</a>|</li>
          <li><a href="/contracts">Contracts</a></li>
        </ul>
      </div>
    </div>


    <h4 class="writeA">Active Assassins</h4>

    <!-- GET data for one assassin -->
    <ul class="collapsible">
      <li>
        <div class="collapsible-header">
          <h6>Code Name: <%= assassins.codeName %></h6>
        </div>
        <div class="collapsible-body">
          <div class="leftname">
            <h6>Name: <%= assassins.fullName %></h6>
          </div>
          <div class="midsquare">
            <div class="ratingprice">
              <h6>Rating: <%= assassins.rating %></h6>
              <h6>Price: <%= assassins.price %></h6>
              <h6>Kills: <%= assassins.kills %></h6>
              <h6>Age: <%= assassins.age %></h6>
            </div>
            <div class="weaponcontact">
              <h6>Weapon: <%= assassins.weapon %></h6>
              <h6>Contact: <%= assassins.contactInfo %></h6>
            </div>
          </div>
          <div class="rightsquare">
            <a href="/assassins/<%= assassins.id %>"><img src="../square.png"><h6>More Info</h6></a>
            <a href="/assassins/<%= assassins.id %>/edit"><img src="../square.png"><h6>Edit</h6></a>
            <a href="/assassins/<%= assassins.id %>"><img src="../square.png"><h6>Delete</h6></a>
          </div>
        </div>
      </li>
    </ul>


    <!-- footer -->
    <%- include('../partials/footer') %>

    <!-- typed.js for typewriter effect -->
    <script type="text/javascript">
    	$(function(){
        $(".writeA").typed({
          strings: ["rD!m @zY4{gf8}? as9d", "Assassin Info"],
          typeSpeed: 1,
          showCursor: false,
        });
      });
    </script>

  </body>

</html>
