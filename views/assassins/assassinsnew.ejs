<!-- views/assassins/assassinsnew.ejs -->
<!-- http://www.killbase.com/assassins/new -->

<!DOCTYPE html>
<html lang="en">

  <head>
    <!-- head tags (meta, css) -->
    <%- include('../partials/headinfo') %>
  </head>

  <body id="assassins">
    <div class="topbanner">
      <div class="crossbase">
        <img src="../crosshair.png" alt="crosshair" class="cross">
        <h1>Killbase</h1>
      </div>

      <div class="navlinksright">
        <ul class="navlinkstop">
          <li><a href="/">Home</a>|</li>
          <li><a href="/assassins">Assassins</a>|</li>
          <li><a href="/contracts">Contracts</a></li>
        </ul>
      </div>
    </div>

    <h4 class="writeA">Active Assassins</h4>

    <!-- form to add a new assassin -->
    <div class="row form">
      <form method="POST" action="/assassins/new" class="col s12">
        <div class="row L">
          <div class="input-field col s7">
            <input placeholder="Name" id="" type="text">
          </div>
          <div class="input-field col s2">
            <input placeholder="Age" id="" type="text">
          </div>
        </div>
        <div class="row L">
          <div class="input-field col s7">
            <input placeholder="Code Name" id="" type="text">
          </div>
          <div class="input-field col s2">
            <input placeholder="Price" id="" type="text">
          </div>
        </div>
        <div class="row L">
          <div class="input-field col s7">
            <input placeholder="Profile Image URL" id="" type="text">
          </div>
          <div class="input-field col s2">
            <input placeholder="Rating" id="" type="text">
          </div>
        </div>
        <div class="row L">
          <div class="input-field col s7">
            <input placeholder="Weapon of Choice" id="" type="text">
          </div>
          <div class="input-field col s2">
            <input placeholder="Kills" id="" type="text">
          </div>
        </div>
        <div class="row LB">
          <div class="input-field col s7">
            <input placeholder="Contact Email" id="email" type="email" class="validate">
          </div>
        </div>

        <!-- add assassin button -->
        <input type="submit" value="Submit Assassin" class="waves-effect waves-light btn submita">
      </form>
    </div>


    <!-- footer -->
    <%- include('../partials/footer') %>

    <!-- typed.js for typewriter effect -->
    <script type="text/javascript">
    	$(function(){
        $(".writeA").typed({
          strings: ["wD!548 @{de8} bd 6dsfd", "Add a New Assassin"],
          typeSpeed: -10,
          backSpeed: -10,
          showCursor: false,
        });
      });
    </script>

  </body>

</html>
