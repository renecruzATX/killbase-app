<!-- views/assassins/assassinsnew.ejs -->
<!-- http://www.killbase.com/assassins/new -->

<!DOCTYPE html>
<html lang="en">

  <head>
    <!-- head tags (meta, css) -->
    <%- include('../partials/headinfo') %>
  </head>

  <body id="assassins">
    <div class="topbanner">
      <div class="crossbase">
        <img src="../crosshair.png" alt="crosshair" class="cross">
        <h1>Killbase</h1>
      </div>

      <div class="navlinksright">
        <ul class="navlinkstop">
          <li><a href="/">Home</a>|</li>
          <li><a href="/assassins">Assassins</a>|</li>
          <li><a href="/contracts">Contracts</a></li>
        </ul>
      </div>
    </div>

    <h4 class="writeA"></h4>

    <!-- form to add a new assassin -->
    <div class="row form">
      <form action="/assassins" method="POST" class="col s12">
        <div class="row L">
          <div class="input-field col s7">
            <input id="Name" type="text" name="fullName">
            <label for="Name">Name: </label>
          </div>
          <div class="input-field col s2">
            <input type="text" placeholder="Age" name="age">
          </div>
        </div>
        <div class="row L">
          <div class="input-field col s7">
            <input type="text" placeholder="Code Name" type="text" name="codeName">
          </div>
          <div class="input-field col s2">
            <input type="text" placeholder="Price" type="text" name="price">
          </div>
        </div>
        <div class="row L">
          <div class="input-field col s7">
            <input type="text" placeholder="Profile Image URL" type="text">
          </div>
          <div class="input-field col s2">
            <input type="text" placeholder="Rating" type="text" name="rating">
          </div>
        </div>
        <div class="row L">
          <div class="input-field col s7">
            <input type="text" placeholder="Weapon of Choice" type="text" name="weapon">
          </div>
          <div class="input-field col s2">
            <input type="text" placeholder="Kills" type="text" name="kills">
          </div>
        </div>
        <div class="row LB">
          <div class="input-field col s7">
            <input type="email" placeholder="Contact Email" type="email" class="validate" name="contactInfo">
          </div>
        </div>

        <!-- add assassin button -->
        <input type="submit" value="Submit Assassin" class="waves-effect waves-light btn submita">
      </form>
    </div>


    <!-- footer -->
    <%- include('../partials/footer') %>

    <!-- typed.js for typewriter effect -->
    <script type="text/javascript">
    	$(function(){
        $(".writeA").typed({
          strings: ["wD!548 @{de8} bd 6dsfd", "Add a New Assassin"],
          typeSpeed: -10,
          backSpeed: -10,
          showCursor: false,
        });
      });
    </script>

    

  </body>

</html>
